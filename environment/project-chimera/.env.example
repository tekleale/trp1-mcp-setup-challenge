# Project Chimera - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# MCP Sense Traceability (Tenx)
# ============================================================================
TENX_MCP_URL=https://mcppulse.10academy.org/proxy
TENX_API_KEY=your_tenx_api_key_here

# ============================================================================
# LLM Provider Credentials
# ============================================================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (GPT)
OPENAI_API_KEY=your_openai_api_key_here

# Google (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# Infrastructure
# ============================================================================
# Redis (Task Queue)
REDIS_URL=redis://localhost:6379/0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/chimera

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# ============================================================================
# Agent Configuration
# ============================================================================
DEFAULT_MODEL=claude-3-5-sonnet-20241022
PLANNER_MODEL=claude-3-5-sonnet-20241022
WORKER_MODEL=gemini-2.0-flash-exp
JUDGE_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=generate_a_secure_random_key_here

